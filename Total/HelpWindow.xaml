            <TextBlock Margin="24,232,38,0" TextWrapping="Wrap" Text="github.com/Kwon770/Total" VerticalAlignment="Top" FontWeight="Bold" Height="19" FontSize="13" Foreground="#FF4B4B4B"/>
            <TextBlock Margin="71,21,163,0" TextWrapping="Wrap" Text="Ver 0.1.0" VerticalAlignment="Top" FontWeight="Bold" Height="15" FontSize="10" Foreground="#FF4B4B4B"/>

        </Grid>
